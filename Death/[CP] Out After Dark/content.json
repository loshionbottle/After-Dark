// Config Schema & Includes 
{
    "Format": "2.8.0",
    // Config 
    "ConfigSchema": {
        // Player Pronouns
        "Player Pronouns 1": {
            "Default": "They",
            "AllowBlank": false,
            "AllowMultiple": true,
            "Section": "Pronouns",
            "Description": "Would typically be something similar to \"They\", \"She\", \"He\"."
        },
        "Player Pronouns 2": {
            "Default": "Their",
            "AllowBlank": false,
            "AllowMultiple": true,
            "Section": "Pronouns",
            "Description": "Would typically be something similar to \"Their\", \"Her\", \"His\"."
        },
        "Player Pronouns 3": {
            "Default": "Them",
            "AllowBlank": false,
            "AllowMultiple": true,
            "Section": "Pronouns",
            "Description": "Would typically be something similar to \"Them\", \"Her\", \"Him\"."
        },
        "Player Pronouns 4": {
            "Default": "They're",
            "AllowBlank": false,
            "AllowMultiple": true,
            "Section": "Pronouns",
            "Description": "Would typically be something similar to \"They're\", \"She's\", \"He's\"."
        },
        // Consequences
        "Death Consequences": {
            "AllowValues": "On, Off only when married to Harvey, Fully off",
            "Default": "Off only when married to Harvey",
            "Section": "Consequences",
            "Description": "Toggles if the player receives penalties for passing out."
        }
    },
    // Dynamic Tokens
    // {{GeneralPlayerPronoun}}
    "DynamicTokens": [
        {
            "Name": "GeneralPlayerPronoun",
            "Value": "|PPN1={{Random: {{Player Pronouns 1}} |key=PlayerPronouns}} |LPPN1={{Random: {{Lowercase: {{Player Pronouns 1}}}} |key=PlayerPronouns}} |PPN2={{Random: {{Player Pronouns 2}} |key=PlayerPronouns}} |LPPN2={{Random: {{Lowercase: {{Player Pronouns 2}}}} |key=PlayerPronouns}} |PPN3={{Random: {{Player Pronouns 3}} |key=PlayerPronouns}} |LPPN3={{Random: {{Lowercase: {{Player Pronouns 3}}}} |key=PlayerPronouns}} |PPN4={{Random: {{Player Pronouns 4}} |key=PlayerPronouns}} |LPPN4={{Random: {{Lowercase: {{Player Pronouns 4}}}} |key=PlayerPronouns}}"
        },
        {
            "Name": "RandomNumber",
            "Value": "{{Random:{{Range: 1, 5}}}}"
        },
        {
            "Name": "SpouseName",
            "Value": "default"
        },
        {
            "Name": "SpouseName",
            "Value": "{{Spouse}}",
            "When": {
                "Spouse": "Alex, Elliott, Harvey, Sam, Sebastian, Shane"
            }
        }
    ],
    // Include files
    "Changes": [
        // Mail
        {
            "LogName": "Elliott's Mail",
            "Action": "Include",
            "FromFile": "Assets/Extra/ElliottMail.json"
        },
        // String Edits
        {
            "LogName": "String Edits",
            "Action": "Include",
            "FromFile": "Assets/Extra/StringEdits.json"
        },
        // Like one conversation topic LMFAO -- Future updates might include more?
        {
            "LogName": "Conversation Topics",
            "Action": "Include",
            "FromFile": "Assets/Extra/DeathConvos.json"
        },
        // Event Files
        {
            "LogName": "Unmarried Death",
            "Action": "Include",
            "FromFile": "Assets/Unmarried/UnmarriedHospital.json, Assets/Unmarried/UnmarriedIsland.json, Assets/Unmarried/UnmarriedMines.json"
        },
        {
            "LogName": "Married Death",
            "Action": "Include",
            "FromFile": "Assets/Married/MarriedHospital.json, Assets/Married/MarriedIsland.json, Assets/Married/MarriedFarm.json, Assets/Married/MarriedMines.json"
        }
    ]
}